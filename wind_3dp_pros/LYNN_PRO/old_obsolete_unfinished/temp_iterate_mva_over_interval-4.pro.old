;  test1          = (n_tot[0] GT  ((n__min[0] + def_nshft[0])*ns[0]))
;  dn0            = LONG( 1d0*(n_tot[0] - ((n__min[0] + def_nshft[0])*ns[0]))/(1d0*ns[0]) )
